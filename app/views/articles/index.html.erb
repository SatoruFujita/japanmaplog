<h2>記事一覧</h2>
<div class="article-index-wrapper">
  <div class="container">
    <% @articles.each do |article| %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="article-index-single">
          <h2 class="article-author">
            <%= article.title %>
          </h2>
          <p class="article-text">
            <%= article.body %>
          </p>
          <p class="article-text">
            <%= image_tag article.image %>
          </p>
          <p class="article-text">
            <%= article.prefecture_id %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
